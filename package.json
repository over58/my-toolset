{
  "name": "my-toolset",
  "displayName": "my-toolset",
  "description": "",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.43.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:my-toolset.revealFileInCode",
    "onCommand:my-toolset.revealFileInOS",
    "onCommand:my-toolset.createComponent"
  ],
  "main": "./extension.js",
  "publisher": "over58",
  "contributes": {
    "commands": [
      {
        "command": "my-toolset.revealFileInCode",
        "title": "新窗口中vscode打开当前文件夹"
      },
      {
        "command": "my-toolset.revealFileInOS",
        "title": "在文件资源管理器中显示"
      },
      {
        "command": "my-toolset.createComponent",
        "title": "创建vue组件"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "my-toolset.revealFileInCode",
          "group": "_modification"
        },
        {
          "when": "editorFocus",
          "command": "my-toolset.revealFileInOS",
          "group": "_modification"
        },
        {
          "when": "editorFocus",
          "command": "my-toolset.createComponent",
          "group": "_modification"
        }
      ],
      
      "explorer/context": [
        {
          "command": "my-toolset.createComponent",
          "group": "_modification",
          "icon": "media/paw-outline.svg"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .  --fix",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "pack": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.43.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:over58/my-toolset.git"
  }
}